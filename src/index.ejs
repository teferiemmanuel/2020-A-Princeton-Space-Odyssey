<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>2020: A Princeton Space Odyssey</title>
        <link rel="stylesheet" type="text/css" href="style.css" />
    </head>
    <body>
        <!-- In-game HUD -->
        <div id="hud">
            <!-- Fuel charges collected -->
            <div id="fuelCollected">
                <h3>Fuel Collected: <span id="fuelCollectedVal"></span> / 5</h3>
            </div>
            <!-- A 45s timer reflected on screen -->
            <div id="fuelBar">
                <h3><span id="timeRemainingVal"></span></h3>
                <progress id="timeRemainingProg" max="100"> </progress>
            </div>
            <!-- Cockpit view overlay -->
            <img src="textures/cockpit.png" />
        </div>
        <!-- User won't see unloaded CSS with this -->
        <div id="startScreen">
            <div
                id="loadOverlay"
                style="
                    background-color: #333;
                    position: absolute;
                    top: 0px;
                    left: 0px;
                    width: 100%;
                    height: 100%;
                "
            ></div>
            <!-- Splash audio -->
            <audio id="audio" autoplay>
                <source src="2001.mp3" type="audio/mpeg" />
            </audio>
            <!-- Start screen splash -->
            <div id="splash">
                <h1 id="gameTitleOne">2020</h1>
                <h1 id="gameTitleTwo">a Princeton Space Odyssey</h1>
                <button type="button" id="startButton" onclick="hideSplash()">
                    Start Game
                </button>
                <h3 id="controls">Controls: </h3>
                <h4 id="controls">
                    WASD Move, R | F Up | Down, Q | E Roll, ↑ | ↓ Pitch, ← | →
                    Yaw
                </h4>
                <h2 id="acknowledgements">
                    Created By: Jessica Edouard, Emmanuel Teferi, Justin Tran,
                    Henry Wang
                </h2>
            </div>
            <!-- Success screen -->
            <div id="successScreen">
                <h1 id="successMessage" onclick="hideSuccess()">
                    Great job, pilot!
                </h1>
                <h2 id="restartMessage" onclick="hideSuccess()">
                    Click to Play Again!
                </h1>
            </div>
            <!-- Hide Start Splash -->
            <script>
                const splash = document.getElementById('splash');
                function hideSplash() {
                    const hud = document.getElementById('hud');
                    splash.style.display = 'none';
                    hud.style.display = 'block';

                    const sound = document.getElementById('audio');
                    sound.pause();
                    sound.currentTime = 0;
                }
                // Hide success screen
                function hideSuccess() {
                    const success = document.getElementById('successScreen');
                    success.style.display = 'none';
                    splash.style.display = 'block';
                }
            </script>
        </div>
    </body>
</html>
