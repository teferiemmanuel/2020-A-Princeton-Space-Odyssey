<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>2020: A Princeton Space Odyssey</title>
        <link rel="stylesheet" type="text/css" href="style.css" />
    </head>
    <body>
        <!-- In-game HUD -->
        <div id="hud" style="width: 100%; height: 100%">
            <!-- Collision message -->
            <div id="collisionMessage">
                <h3><span id="collisionMessageVal"></span></h3>
            </div>
            <!-- Fuel charges collected -->
            <div id="fuelCollected">
                <h3>Fuel Collected: <span id="fuelCollectedVal"></span></h3>
            </div>
            <!-- A timer reflected on screen -->
            <div id="fuelBar">
                <h3><span id="timeElapsedVal"></span></h3>
                <progress id="timeRemainingProg" max="100"> </progress>
            </div>
            <!-- Cockpit view overlay -->
            <img src="textures/cockpit.png" style="width: 100%; height: 100%"/>
        </div>
        <!-- User won't see unloaded CSS with this -->
        <div id="startScreen">
            <div
                id="loadOverlay"
                style="
                    background-color: #333;
                    position: absolute;
                    top: 0px;
                    left: 0px;
                    width: 100%;
                    height: 100%;
                "
            ></div>
            <!-- Splash audio -->
            <audio autoplay loop id="audio">
                <source src="2001.mp3" type="audio/mpeg" />
            </audio>
            <!-- Start screen splash -->
            <div id="splash">
                <img src="textures/spacelogo.png"  style="width: 65%; margin-left: auto; margin-right: auto; display: block" />
                <button type="button" id="startButton" onclick="hideSplash()">
                    Start Game
                </button>
                <h3 id="controls">Controls: </h3>
                <h4 id="controls">Look with Mouse</h4>
                <h4 id="controls">Spacebar: Accel</h4>
                <h4 id="controls">Shift: Brake</h4>
                <h4 id="controls">Q | E: Barrel Roll</h4>
                <br>
                <h3 id="controls">Instructions: </h3>
                <h4 id="controls">Collect fuel charges for as long as possible while avoiding asteroids! <br> Collect a powerup to gain temporary invincibility.</h4>
                <h2 id="acknowledgements">
                    Created By: Jessica Edouard, Emmanuel Teferi, Justin Tran,
                    Henry Wang
                </h2>
            </div>
            <!-- Finish game screen -->
            <div id="finishGameScreen" onclick="hideFinishGame()">
                <h1 id="finishGameMessage" >
                    Out of fuel!
                </h1>
                <h2 id="finishGameFuel">
                </h2>
                <h2 id="finishGameTime">
                </h2>
                <br>
                <h2 id="restartMessage">
                    Click to Play Again!
                </h1>
            </div>
            <!-- Hide Start Splash -->
            <script>
                const splash = document.getElementById('splash');
                var elapsedTime;
                function hideSplash() {
                    const hud = document.getElementById('hud');
                    splash.style.display = 'none';
                    hud.style.display = 'block';

                    const sound = document.getElementById('audio');
                    sound.pause();
                    sound.currentTime = 0;

                    // Start game elapsed timer
                    elapsedTime = new Date().getTime()
                }
                // Hide finish game screen
                function hideFinishGame() {
                    const finishGame = document.getElementById('finishGameScreen');
                    finishGame.style.display = 'none';
                    splash.style.display = 'block';
                }
            </script>
        </div>
    </body>
</html>
